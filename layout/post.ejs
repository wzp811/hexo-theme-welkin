<main>
    <article class="post-detail">
        <h1 class="post-title"><%= page.title ? page.title : "" %></h1>
        <div class="post-info">
            <time class="date">
                <%= date(page.date, "YYYY-MM-DD") %>
            </time>
        </div>
        <div class="post-content">
            <%- page.content %>
        </div>
    </article>
</main>
